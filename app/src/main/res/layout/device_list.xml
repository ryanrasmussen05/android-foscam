<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout    
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent" 
    android:background="@drawable/device_list_background"
    android:orientation="vertical"    
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:weightSum="1" 
    android:id="@+id/LinearLayout_device_list">   

      <LinearLayout 
		    android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:background="@drawable/device_list_top_background"
			android:gravity="center_vertical">
	
			<Button android:layout_gravity="left" 
			 	android:layout_width="50dip" 
			   	android:background="@drawable/device_list_return_button_style"
			   	android:layout_height="fill_parent" 
			   	android:id="@+id/btn_device_list_back" >
			 </Button>
			 
			<TextView    
        		android:id="@+id/TextView_Show"    
        		android:layout_height="wrap_content"    
        		android:textSize="25sp" 
        		android:textColor="#000000"
        		android:gravity="center"
        		android:layout_width="fill_parent" 
        		android:text="@string/device_list_title">    
       		</TextView> 
		</LinearLayout>   
    	<ListView
			android:layout_weight="1.0" 
			android:cacheColorHint="#0000ff"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:textColor="#ff00ff"
			android:id="@+id/ls_device_list">    
    	</ListView>  
    	
  		<LinearLayout android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="center_horizontal"  
			android:background="@drawable/device_list_bottom_background"
			android:id="@+id/LinearLayout_bottom_btn_array">

			<LinearLayout android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:gravity="center_horizontal"  
				android:layout_weight="1"
				android:id="@+id/LinearLayout_bottom_btn_array2">
				<Button android:layout_gravity="center_horizontal"  
					android:layout_width="50dip" 
					android:layout_height="fill_parent" 
					android:background="@drawable/device_list_search_button_style"
					android:id="@+id/btn_device_list_search">
				</Button>
			</LinearLayout>
			
			
			<LinearLayout android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:gravity="center_horizontal"
				android:layout_weight="1"
				android:id="@+id/LinearLayout_bottom_btn_array3">
				<Button android:id="@+id/btn_device_list_add"
				 	android:layout_width="50dip" 
				  	android:layout_gravity="center_horizontal"  
				  	android:layout_height="fill_parent"
				  	android:background="@drawable/device_list_add_button_style">
				</Button>
			</LinearLayout>
		</LinearLayout>
</LinearLayout>  
