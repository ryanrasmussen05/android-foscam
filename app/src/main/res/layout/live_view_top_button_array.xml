<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:id="@+id/linearLayout_equipment" 
	android:layout_width="fill_parent"
	android:orientation="horizontal" 
	android:background="@drawable/live_view_top_background">
	<LinearLayout android:layout_height="fill_parent"
		android:id="@+id/linearLayout_back" 
		android:layout_width="fill_parent"
		android:layout_weight="0.3"
		android:orientation="horizontal">
			
		<Button android:layout_gravity="center" 
			android:layout_width="wrap_content" 
			android:background="@drawable/live_view_exit_button_style"
			android:layout_height="fill_parent"
			android:id="@+id/btn_live_view_exit">
		</Button>
			   
		<TextView android:id="@+id/tv_live_vew_dev_name" 
			android:text="" 
			android:textSize="20dip"
			android:textColor="#000000"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:focusable="true"
			android:gravity="center">
		</TextView>
	</LinearLayout>
	
	<LinearLayout android:layout_height="fill_parent"
		android:id="@+id/linearLayout_back2" 
		android:layout_width="fill_parent"
		android:layout_weight="1.0"
		android:gravity="right"
		android:orientation="horizontal">	   
		<Button android:layout_width="wrap_content" 
			android:background="@drawable/live_view_device_button_style"
			android:layout_height="fill_parent" 
			android:id="@+id/btn_live_view_device">
		</Button>
	</LinearLayout>
</LinearLayout>