<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/line_layout_wifi_list_item"
	android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
	
	<LinearLayout 
		android:id="@+id/line_layout_wifi_list_item_info"
		android:orientation="vertical"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="fill_parent"
		android:gravity="center_vertical"
		android:layout_weight="0.5">
		<TextView 
			android:id="@+id/tv_wifi_setting_ssid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#ff00ff"
			android:gravity="center_vertical"
			android:paddingLeft="6dip"
			android:text="ssid"/>
			
		<TextView 
			android:id="@+id/tv_wifi_setting_encryType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#0000ff"
			android:gravity="center_vertical"
			android:paddingLeft="6dip"
			android:text="encry type"/>
	</LinearLayout>
	
	
	<LinearLayout 
		android:id="@+id/line_layout_wifi_list_item_button"
		android:orientation="horizontal"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="fill_parent"
		android:gravity="center"
		android:layout_weight="2.0">
		
		<ImageView android:id="@+id/iv_wifi_setting_quality"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@drawable/wifi_4"/>
	</LinearLayout>
</LinearLayout>
