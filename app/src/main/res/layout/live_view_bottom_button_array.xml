<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="30dip"
	android:id="@+id/linearLayout_intercom"
	android:layout_width="fill_parent"
	android:background="@drawable/device_list_bottom_background"
	android:orientation="horizontal"
	android:gravity="center_horizontal">
 		
	<Button android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:layout_weight="1.0"  
		android:background="@drawable/d4"
		android:id="@+id/btn_Record">
	</Button> 
    <Button android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"  
    	android:layout_weight="1.0" 
		android:background="@drawable/d7"
		android:id="@+id/btn_snap">
	</Button>
	<Button android:layout_gravity="center_horizontal|center_vertical"  
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_weight="1.0" 
		android:background="@drawable/d9"
		android:id="@+id/btn_audio" >
	</Button>	
	<Button android:layout_gravity="center_horizontal|center_vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_weight="1.0" 
		android:background="@drawable/d8"
		android:id="@+id/btn_talk">
	</Button>
		
</LinearLayout>