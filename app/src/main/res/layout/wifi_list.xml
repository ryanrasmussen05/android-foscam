<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout    
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent" 
    android:background="@drawable/device_list_background"
    android:orientation="vertical"    
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:weightSum="1" 
    android:id="@+id/LinearLayout_device_list">   

      <LinearLayout 
		    android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:background="@drawable/device_list_top_background"
			android:gravity="center_vertical">
	
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="0.5"
				android:orientation="horizontal"
				android:gravity="left">
				<Button android:layout_gravity="left" 
				 	android:layout_width="50dip" 
				   	android:background="@drawable/device_list_return_button_style"
				   	android:layout_height="fill_parent" 
				   	android:id="@+id/btn_wifi_setting_back" >
				 </Button>
			 </LinearLayout>   
	      	
	      	<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="0.5"
				android:orientation="horizontal"
				android:gravity="right">
		      	<Button android:layout_gravity="left" 
				 	android:layout_width="50dip" 
				   	android:background="@drawable/device_list_search_button_style"
				   	android:layout_height="fill_parent" 
				   	android:id="@+id/btn_wifi_setting_scan" >
				 </Button>
			</LinearLayout>
		</LinearLayout>   
    	<ListView
			android:layout_weight="1.0" 
			android:cacheColorHint="#0000ff"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:textColor="#ff00ff"
			android:id="@+id/ls_wifi_list">    
    	</ListView>
</LinearLayout>  
