<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- 按下状态 -->
    <item android:state_pressed="true"
    	android:drawable="@drawable/device_list_btn_search_pressed">
		<shape android:shape="rectangle">
           	<padding android:left="9dp" 
				android:top="10dp" 
				android:right="10dp" 
				android:bottom="10dp">
			</padding>
         <stroke android:width="3dp" 
           	android:color="#d5dbb6">
         </stroke>
       </shape>
    </item>
    <!-- 获取焦点 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
           	<padding android:left="10dp" 
           		android:top="10dp" 
           		android:right="10dp" 
           		android:bottom="10dp">
           	</padding>
           	<stroke android:width="3dp" 
           		android:color="#d5dbb6">
           	</stroke>
       </shape>
    </item>
    
    <!-- 正常-->
    <item android:drawable="@drawable/device_list_btn_search_normal">
        <shape android:shape="rectangle">
           <padding android:left="10dp" 
           		android:top="10dp"
           		android:right="10dp" 
           		android:bottom="10dp">
           </padding>
           <stroke android:width="1dp" 
           		android:color="#d5dbb6">
           </stroke>
       </shape>
    </item>
</selector>